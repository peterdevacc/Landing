<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="LandingTheme.DayNight" parent="Base.LandingTheme" />

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.LandingTheme" parent="Base.MaterialThemeBuilder">
        <!--Material color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.LandingTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.LandingTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.LandingTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.LandingTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.LandingTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.LandingTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.LandingTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.LandingTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.LandingTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.LandingTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.LandingTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.LandingTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.LandingTheme.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.LandingTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.LandingTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.LandingTheme.LargeComponent
        </item>

        <!--Component styles-->
        <item name="alertDialogTheme">@style/Components.LandingTheme.AlterDialog</item>

        <item name="android:statusBarColor">@color/color_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:popupMenuStyle">@style/Widget.LandingTheme.PopupMenu</item>

    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="alphaEmphasisHigh">@dimen/alpha_emphasis_high</item>
        <item name="alphaEmphasisMedium">@dimen/alpha_emphasis_medium</item>
        <item name="alphaEmphasisDisabled">@dimen/alpha_emphasis_disabled</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

</resources>
